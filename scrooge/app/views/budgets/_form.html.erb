<h1>Budget</h1>
	
<form>
	<div>
	Name:<br>
	<input id="name"><br><br>
	</div>
	
	<div>
	Amount:<br>
	<input id="amount"><br><br>
	</div>

	<input type="submit">
</form>

<script type="text/javascript">
$(function() {
	$.get('/api/budget/<%=@id%>', function(data) {
	console.log("here is the data", data);
		$('#name').val(data.name);
		$('#amount').val(data.amount);
	});
	$('form').submit(function(event) {
	console.log("submit");
		event.preventDefault();
		
		var values = $(this).serialize();
		
		var posting = $.post('/api/budget/<%=@id%>', values);
		
		posting.done(function(data) {
		var budget = data;
		$('#name').text(budget['name']);
		$('#amount').text(budget['amount']);
		});
	});
});
</script>	
	

