
<h1>Budget</h1>
<%= form_for @budget do |f| %>

  <% if @budget.errors.any? %>
    <div id="error_explanation">
      <p>Please see following errors:</p>
      <ul>
        <% @budget.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
	
	<div class="field<%= ' field_with_errors' if @budget.errors[:name].any? %>">
	<%= f.label :name %><br>
